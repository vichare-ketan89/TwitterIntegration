<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.keto.twitterintegration.activity.MenuActivity">

    <TextView
        android:id="@+id/hello_user_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/show_timeline_buton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/tw__solid_white"
        android:background="@color/tw__blue_default"
        android:layout_margin="3dp"
        android:text="Show Timeline"/>

    <EditText
        android:id="@+id/edit_tweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:hint="Enter Tweet"/>

    <Button
        android:id="@+id/post_tweet_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/tw__solid_white"
        android:background="@color/tw__blue_default"
        android:layout_margin="3dp"
        android:text="Post Tweet"/>

    <Button
        android:id="@+id/get_followers_list_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/tw__solid_white"
        android:background="@color/tw__blue_default"
        android:layout_margin="3dp"
        android:text="Get Followers"/>

    <EditText
        android:id="@+id/edit_tweet_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:hint="Search Tweet e.g. #happy"/>
    <Button
        android:id="@+id/search_tweets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/tw__solid_white"
        android:background="@color/tw__blue_default"
        android:layout_margin="3dp"
        android:text="Search For Tweets"/>

</LinearLayout>
